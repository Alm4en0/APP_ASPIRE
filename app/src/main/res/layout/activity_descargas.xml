<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Descargas.DescargasActivity"
    android:background="@color/fondo"
    android:orientation="vertical"
    android:layout_marginBottom="50dp"
    android:layout_marginTop="30dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarCursos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Prototipoproyecto"
        android:background="@color/header"
        app:title="Descargar Recursos"
        app:titleTextColor="@color/white"
        app:titleMarginStart="30dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="70dp"
        android:gravity="center">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reciclerDescargas"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:listitem="@layout/item_descarga" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
